CC=gcc
CFLAGS = -c -O3 -g  -I vh
LDFLAGS = vh/libvh.a -lz -lm -lpthread
SOURCES = test.c
OBJECTS = $(SOURCES:.c=.o)
EXECUTABLE = test
INSTALLPATH = /usr/local/bin/

all: $(SOURCES) $(EXECUTABLE)
	rm -rf *.o

$(EXECUTABLE): $(OBJECTS) 
	$(CC) $(OBJECTS) -o $@ $(LDFLAGS)

.c.o:
	$(CC) $(CFLAGS) $< -o $@

clean: 
	rm -f $(EXECUTABLE) *.o *~

libs:
	make clean -C htslib
	make -C vh htslib

